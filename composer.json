{
    "name": "3ev/repoman",

    "type": "library",

    "description": "Lightweight repository pattern implementation",

    "keywords": ["repository", "pattern", "laravel", "eloquent"],

    "homepage": "https://github.com/3ev/repoman",

    "license": "MIT",

    "authors": [
        {
            "name": "3ev",
            "homepage": "http://www.3ev.com/",
            "role": "Developer"
        },

        {
            "name": "Ben Constable",
            "email": "benconstable@3ev.com",
            "homepage": "http://github.com/BenConstable",
            "role": "Developer"
        }
    ],

    "require": {
        "php": ">= 5.4"
    },

    "require-dev": {
        "illuminate/database": "~5.0"
    },

    "suggest": {
        "illuminate/database": "Required for the Eloquent implementation"
    },

    "autoload": {
        "psr-4": {
            "Tev\\": "src/Tev/"
        }
    },

    "config": {
        "preferred-install": "dist",
        "bin-dir": "bin"
    },

    "extra": {
        "branch-alias": {
            "dev-master": "1.x-dev"
        }
    }
}
